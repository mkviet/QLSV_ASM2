@model IEnumerable<QLSVVV.Models.Course>


<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f1f1f1;
        color: #444;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
    }

    h3 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
    }

    .search-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .search-input {
        width: 200px;
        padding: 8px;
        border: 2px solid #3498db;
        border-radius: 4px;
        box-sizing: border-box;
        margin-right: 10px;
    }

    .search-btn {
        padding: 8px 16px;
        background-color: #3498db;
        color: #fff;
        border: 2px solid #3498db;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-btn:hover {
            background-color: #fff;
            color: #3498db;
            font-weight: bold;
        }

    p {
        text-align: center;
        margin-bottom: 20px;
    }

        p a {
            display: inline-block;
            padding: 8px 16px;
            background-color: #27ae60;
            color: #fff;
            text-decoration: none;
            border: 2px solid #00CC00;
            border-radius: 4px;
            font-size: 14px;
            transition: background-color 0.3s;
            margin-right: 5px;
        }

            p a:hover {
                background-color: #fff;
                color: #27ae60;
                font-weight: bold;
                text-decoration: none;
            }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 10px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    thead {
        background-color: #f9f9f9;
    }

    tbody tr:nth-child(even) {
        background-color: #f7f7f7;
    }

    tbody tr:hover {
        background-color: #e9e9e9;
    }

    a {
        color: #3498db;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    ul {
        list-style-type: none;
        padding: 0;
        text-align: center;
        margin-top: 20px;
    }

        ul li {
            display: inline-block;
        }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        color: #fff;
        background-color: #3498db;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
        margin-right: 5px;
    }

        .btn:hover {
            background-color: #fff;
            text-decoration: none;
            color: #3498db;
            font-weight: bold;
        }

</style>
<h1>Hello Admin, Welcome to Course Homepage</h1>

<!-- Search container -->
<div class="search-container">
    <input type="text" id="searchInput" class="search-input" placeholder="Search by Name...">
    <button onclick="search()" class="search-btn">Search</button>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Class</th>
            <th>Date Start</th>
            <th>Date End</th>
            <th>Major</th>
            <th>Lecturer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Class</td>
                <td>@item.DateStart?.ToString("d")</td> <!-- Format date as needed -->
                <td>@item.DateEnd?.ToString("d")</td> <!-- Format date as needed -->
                <td>@item.Major</td>
                <td>@item.Lecturer</td>
                <td>
                   <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a asp-action="EditCourse" asp-route-id="@item.Id">ViewCourse</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>


<ul><li> <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Index">Back to HomePage</a></li></ul>


<script>
    function search() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.querySelector(".table");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[1]; // Search in the second column (Name column)
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>